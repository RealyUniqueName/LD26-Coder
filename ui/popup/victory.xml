<?xml version="1.0" encoding="UTF-8"?>


<Popup name="'popup'">
    <VBox defaults="'popup'">
        <Text text="'Released!'" format-size="40"/>
        <Text text="'Total score: ' + @score" />
        <Button text="'Next'" on-click="
            $this.getParentAs('popup', $Popup).close();
            $Main.playLevel(#Level(level).num + 1);
        "/>
    </VBox>
</Popup>