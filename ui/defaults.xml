<?xml version="1.0" encoding="UTF-8"?>


<Defaults>
    <Text>
        <Default
            label-filters    = "[new nme.filters.GlowFilter(0x333333, 1, 2, 2)]"
            format-font      = "$Assets.getFont('assets/fonts/piedra.ttf').fontName"
            format-color     = "0xcdc4d9"
            format-size      = "16"
            label-embedFonts = "true"
            label-selectable = "false"
        />
        <tutorial
            format-font      = "$Assets.getFont('assets/fonts/piedra.ttf').fontName"
            format-color     = "0x9d96a6"
            format-size      = "16"
            label-autoSize   = "nme.text.TextFieldAutoSize.NONE"
            widthPt          = "100"
            heightPt         = "100"
            label-wordWrap   = "true"
            label-embedFonts = "true"
            label-selectable = "false"
            on-resize        = "$this.label.height = $this.h;"
        />
    </Text>
    <InputText>
        <Default
            label-filters    = "[new nme.filters.GlowFilter(0x333333, 1, 2, 2)]"
            format-font      = "$Assets.getFont('assets/fonts/piedra.ttf').fontName"
            format-color     = "0xcdc4d9"
            format-size      = "16"
            label-autoSize   = "nme.text.TextFieldAutoSize.NONE"
            label-embedFonts = "true"
            w           = "200"
            label-width = "200"
            skin:Paint-border      = "2"
            skin:Paint-borderColor = "0xcdc4d9"
            skin:Paint-color       = "0xFFFFFF"
        />
    </InputText>

    <Button>
        <Default
            padding = "5"
            h       = "30"
            label-filters      = "[new nme.filters.GlowFilter(0x333333, 1, 2, 2)]"
            label-selectable   = "false"
            label-mouseEnabled = "false"
            label-embedFonts   = "true"
            label-autoSize     = "nme.text.TextFieldAutoSize.LEFT"
            format-font        = "$Assets.getFont('assets/fonts/piedra.ttf').fontName"
            format-size        = "14"
            format-color       = "0xcdc4d9"
            format-align       = "nme.text.TextFormatAlign.CENTER"
            skin:Tile-src      = "'assets/img/greenBg.jpg'"
            skin:Tile-corners  = "[10]"
        />
        <mainMenu
            w="280"
            h="80"
            format-size = "40"
            skin:Tile-src     = "'assets/img/greenBg.jpg'"
            skin:Tile-corners = "[40]"
        />
    </Button>

    <Popup>
        <Default
            widthPt  = "100"
            heightPt = "100"
            skin:Paint-color = "0x000000"
            skin:Paint-alpha = "0.01"
        />
    </Popup>

    <VBox>
        <popup
            w       = "250"
            padding = "10"
            childPadding = "10"
            skin:Paint-color  = "0xDDDDDD"
            skin:Paint-border = "4"
            skin:Paint-borderColor = "0x999999"
        />
    </VBox>

    <Score>
        <Default
            widthPt          = "100"
            align            = "'center,middle'"
            label-embedFonts = "true"
            label-selectable = "false"
            format-size      = "30"
            format-color     = "0xcdc4d9"
            label-filters    = "[new nme.filters.GlowFilter(0x333333, 1, 2, 2)]"
            format-font      = "$Assets.getFont('assets/fonts/piedra.ttf').fontName"
        />
    </Score>
</Defaults>